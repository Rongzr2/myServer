{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) 启动我的聊天服务器", // 配置名称
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/ChatClient", // 重要！改为你的可执行文件名
            "args": ["127.0.0.1", "8000"], // 可以在这里添加程序启动参数，例如端口号
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // 程序启动的工作目录
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "cmake-build-debug", // 必须与 tasks.json 中的 label 一致
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}